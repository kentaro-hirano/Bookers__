<div class="container">
  <div class="row">
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <%= "error" %>
        <li><%= message %></li>
    <% end %>
    </ul>
    <h2>User info</h2>
    <%= form_for(@user) do |f| %>
      <%= f.label :Name %>
      <%= f.text_field :name %>
      <br>
      <%= f.label :Image %>
      <%= f.attachment_field :profile_image %>
      <h4>Introduction</h4>
      <%= f.text_field :introduction %>
      <br>
      <%= f.submit 'Update User' %>    
    <% end %>
  </div>
</div>
