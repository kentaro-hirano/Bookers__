<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header>
  <nav class="navbar navbar-inverse">
  <div class="container">
    <div class="row header">
      <div class="col-lg-6">
        <h4>Bookers</h4>
      </div>
      <div class="col-lg-6">
        <div id="slidemenu">
          <ul class="nav navbar-nav navbar-right" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn">
            <% if user_signed_in? %>
              <li class="">
                <%= link_to user_path(current_user), class: "nav" do  %>
                  <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
                  Home
                <% end %>
              </li>
              <li class="">
                <%= link_to users_path, class: "nav" do   %>
                  <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                  Users
                <% end %>
              </li>
              <li class="">
                <%= link_to books_path, class: "nav"  do %>
                  <span class="glyphicon glyphicon-book" aria-hidden="true"></span>
                  Books
                  <% end %>
              </li>
              <li class="">
                <%= link_to destroy_user_session_path, method: :delete, class: "nav" do %>
                  <span class="glyphicon glyphicon-log-in" aria-hidden="true"></span>
                  logout
                <% end %>
              </li>
            <% else %>
              <li class="">
                <%= link_to root_path, class: "nav" do  %>
                <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
                Home
                <% end %>
              </li>
              <li class="">
              <%= link_to home_about_path, class: "nav" do  %>
                <span class="glyphicon glyphicon-link" aria-hidden="true"></span>
                about
                <% end %>
              </li>
              <li class="">
                <%= link_to new_user_registration_path, class: "nav" do  %>
                  <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                  sign up
                <% end %>
              </li>
              <li class="">
                <%= link_to new_user_session_path, class: "nav" do  %>
                  <span class="glyphicon glyphicon-log-in" aria-hidden="true"></span>
                  login
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
      <div>
    </div>
  </div>
  </nav>
  </header>
  <div class="body">
    <div class="container">
      <div class="row">
        <%= flash[:notice] %>
      </div>
    </div>
    <%= yield %>
  </div>
  </body>
</html>
